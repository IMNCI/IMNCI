<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/assessment_layout"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="?android:attr/expandableListPreferredChildPaddingLeft"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:id="@+id/line"
        android:layout_toLeftOf="@id/assessment_title"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_weight="3.8"
        android:id="@+id/assessment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fontFamily="@font/sourcesansproregular"
        android:paddingLeft="4dp"/>

    <ImageView
        android:id="@+id/hand_image"
        android:visibility="gone"
        android:layout_weight="0"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_tap"
        android:tint="#BDBDBD"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/assessment_id"/>
</LinearLayout>