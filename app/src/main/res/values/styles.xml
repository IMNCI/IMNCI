<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sourcesansproregular</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/sourcesansproregular</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>

    <style name="SplashTheme" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/colorMaroon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="alertTitleText" parent="titleText">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="formTitleText" parent="titleText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="followup_html">
        <item name="android:textSize">18dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/sourcesansproregular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
